<h3 id="title">Registrar-se:</h3>
<div class="card text-left">
  <div class="card-body">
    <form action="/usuario/registro" method="POST">
        <label for="nome">Nome: </label>
            <input type="text" name="nome" id="nome" class="form-control" required>
        <label for="email">Email: </label>
            <input type="email" name="email" id="email" class="form-control" required>
        <label for="senha">Senha: </label>
            <input type="password" name="senha" id="senha" class="form-control" required>
        <label for="senha2">Repita sua senha: </label>
            <input type="password" name="senha2" id="senha2" class="form-control" required>
        <button type="submit" class="btn btn-success mt-4">Registrar-se</button>
    </form>
  </div>
</div>
        